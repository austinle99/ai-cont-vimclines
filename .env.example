# ===================================================================
# DATABASE CONFIGURATION
# ===================================================================

# PostgreSQL credentials (Docker setup)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here_change_me
POSTGRES_DB=ai_cont_db

# Database connection URLs
DATABASE_URL="postgresql://postgres:your_password@localhost:5432/ai_cont_db?connection_limit=100&pool_timeout=60"
DIRECT_URL="postgresql://postgres:your_password@localhost:5432/ai_cont_db"

# ===================================================================
# REDIS CONFIGURATION (Optimized Stack)
# ===================================================================

REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_ENABLED=true
ENABLE_REDIS_CACHE=true

# ===================================================================
# PGADMIN CONFIGURATION
# ===================================================================

PGADMIN_EMAIL=admin@admin.com
PGADMIN_PASSWORD=change_me_in_production

# ===================================================================
# NODE.JS / APPLICATION CONFIGURATION
# ===================================================================

NODE_ENV=production
NEXT_PUBLIC_APP_URL=http://localhost:3000
LOG_LEVEL=info

# Node.js performance (8GB heap for 256GB RAM workstation)
NODE_OPTIONS=--max-old-space-size=8192

# ===================================================================
# AI/ML CONFIGURATION
# ===================================================================

# OpenAI API key for chatbot functionality
OPENAI_API_KEY=your_openai_api_key_here

# GPU support (set true when RTX 5080 support added)
ENABLE_GPU=false

# ML processing settings
ML_BATCH_SIZE=100
ML_WORKER_THREADS=8
ML_MODEL_VERSION=v1
ENABLE_MODEL_WARMUP=true

# ===================================================================
# PERFORMANCE OPTIMIZATION (Workstation-Optimized)
# ===================================================================

# Cache settings
DEFAULT_CACHE_TTL=300
CACHE_TTL_SECONDS=300
MAX_CACHE_SIZE=1000

# Container processing limits
MAX_CONTAINERS_PER_REQUEST=1000

# API Rate limiting
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW=60000

# ===================================================================
# LONGSTAY ANALYSIS SETTINGS
# ===================================================================

LONGSTAY_THRESHOLD_DAYS=14
LONGSTAY_CRITICAL_DAYS=21

# Costs (USD)
DAILY_STORAGE_COST=5
RELOCATION_COST=200
URGENT_PICKUP_COST=150

# ===================================================================
# ISHIP INTEGRATION (Power Automate Desktop)
# ===================================================================

# API Security key (generate random 32+ char string)
ISHIP_API_KEY=your_random_api_key_32_characters_minimum

# PAD settings
ISHIP_SCRAPING_ENABLED=true
ISHIP_SCRAPE_INTERVAL=14400  # 4 hours

# ===================================================================
# EMAIL/ALERTS (Optional)
# ===================================================================

ALERT_EMAIL_ENABLED=false
ALERT_EMAIL_FROM=noreply@your-domain.com
ALERT_EMAIL_TO=ops@your-domain.com

# SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# ===================================================================
# SECURITY
# ===================================================================

SESSION_SECRET=your_random_session_secret_64_chars_minimum
JWT_SECRET=your_jwt_secret_key_here
CORS_ORIGINS=http://localhost:3000
