# Database Configuration
DATABASE_URL="postgresql://username:password@host:port/database"
DIRECT_URL="postgresql://username:password@host:port/database"

# Docker/Kubernetes Setup
# For containerized setup, copy from .env.docker
# DATABASE_URL="postgresql://postgres:your-password@localhost:5432/ai_cont_db"

# Redis Configuration (Optional - for distributed caching)
# If not configured, the app will use in-memory caching
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# AI/ML Configuration
# OpenAI API key for chatbot functionality
OPENAI_API_KEY=your_openai_api_key_here

# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Performance Optimization Settings
# Enable/disable Redis caching (requires Redis server)
ENABLE_REDIS_CACHE=false

# Model warmup on startup (recommended for production)
ENABLE_MODEL_WARMUP=true

# Cache TTL in seconds (default: 300 = 5 minutes)
DEFAULT_CACHE_TTL=300

# Max cache size for in-memory cache (default: 100 entries)
MAX_CACHE_SIZE=100
